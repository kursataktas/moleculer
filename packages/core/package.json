{
  "name": "@moleculer/core",
  "version": "1.0.0-alpha.1",
  "description": "Core package of Moleculer framework",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsx watch examples/index.ts",
    "format": "prettier . --ignore-unknown --check",
    "format:fix": "prettier . --ignore-unknown --write",
    "lint": "TIMING=1 eslint .",
    "test": "jest"
  },
  "keywords": [
    "microservice",
    "microservices",
    "moleculer",
    "framework",
    "backend",
    "messagebus",
    "rpc",
    "services",
    "micro",
    "pubsub",
    "scalable",
    "distributed"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moleculerjs/moleculer.git"
  },
  "funding": "https://github.com/moleculerjs/moleculer?sponsor=1",
  "author": "MoleculerJS",
  "license": "MIT",
  "engines": {
    "node": ">= 20.x.x"
  },
  "devDependencies": {
    "@moleculer/eslint-config": "workspace:*",
    "@moleculer/jest-config": "workspace:*",
    "@moleculer/tsconfig": "workspace:*",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.12",
    "eslint": "catalog:",
    "jest": "catalog:",
    "prettier": "catalog:",
    "ts-jest": "catalog:",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2"
  }
}
