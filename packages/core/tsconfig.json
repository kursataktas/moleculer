{
  "extends": "@moleculer/tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "types": ["node", "lodash", "reflect-metadata", "jest"],
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    // add all typechecked paths here
    "src/**/*", // source folder
    "examples/**/*", // source folder
    "./.*.cjs", // root commonjs config files
    "./.*.mjs", // root esm config files
    "./.*.js", // root javascript config files
    "./*.js", // root javascript files
    "./*.mjs", // root esm files
    "__mocks__/**/*", // jest mocks
    "test/**/*" // test folder
  ]
}
